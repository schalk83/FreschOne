@model FreschOne.Models.foReports

@{
    ViewData["Title"] = "Create Report";
    var userid = ViewBag.userid;
}

<partial name="_Sidebar" />

<h2>Create Report</h2>

<form asp-action="Create" asp-route-userid="@userid" method="post">
    <div class="mb-3">
        <label asp-for="ReportName" class="form-label">Report Name</label>
        <input asp-for="ReportName" class="form-control" />
        <span asp-validation-for="ReportName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReportDescription" class="form-label">Report Description</label>
        <textarea asp-for="ReportDescription" class="form-control"></textarea>
        <span asp-validation-for="ReportDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index", new { userid })" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
