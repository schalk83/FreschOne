@model FreschOne.Models.foProcess
@{
    ViewBag.Title = "Edit Process";
    var userid = ViewBag.userid;
    var foProcessID = ViewBag.foProcessID; 
}

<partial name="_Sidebar" />

<h2>Edit Process</h2>

<form asp-action="Edit" asp-route-userid="@userid" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label>Process Name</label>
        <input asp-for="ProcessName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="ProcessDescription" class="form-control"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-sm btn-blue">Update</button>
    <a href="@Url.Action("Index", new { userid })" class="btn btn-sm btn-grey">Cancel</a>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Index", "foProcessSteps", new { processid = foProcessID, userid = userid })" class="btn btn-sm btn-outline-secondary">
            View Steps
        </a>
    </div>


</form>
