@model FreschOne.Models.foProcess
@{
    ViewBag.Title = "Create Process";
    var userid = ViewBag.userid;
}

<h2>Create New Process</h2>

<form asp-action="Create" asp-route-userid="@userid" method="post">
    <div class="form-group">
        <label>Process Name</label>
        <input asp-for="ProcessName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="ProcessDescription" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-route-userid="@userid" class="btn btn-secondary">Cancel</a>
</form>
