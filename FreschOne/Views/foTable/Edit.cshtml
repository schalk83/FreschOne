@model FreschOne.Models.foTable

@{
    ViewData["Title"] = "Edit Table";
    int userid = ViewBag.userid;
}

<partial name="_Sidebar" />

<h2 class="mb-4">✏️ Edit Table</h2>

<form asp-action="Edit" method="post" asp-route-userid="@userid">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label asp-for="SchemaName" class="form-label"></label>
        <input asp-for="SchemaName" class="form-control" />
        <span asp-validation-for="SchemaName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TableName" class="form-label"></label>
        <input asp-for="TableName" class="form-control" />
        <span asp-validation-for="TableName" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" asp-route-userid="@userid" class="btn btn-sm btn-green">⬅ Back</a>
        <button type="submit" class="btn btn-sm btn-green">💾 Save Table</button>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
