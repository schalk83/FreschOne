@model FreschOne.Models.TableViewModel
@{
    var userid = ViewBag.userid;
}

<partial name="_Sidebar" />

<h1>Data for Table: @Model.TableName</h1>


<a href="@Url.Action("Create", new { userid = Model.UserId, tablename = Model.TableName })" class="btn btn-primary">Create</a>


<table class="table table-bordered">
    <thead>
        <tr>
            @foreach (var column in Model.Columns)
            {
                <th>@column</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.TableData)
        {
            <tr>
                @foreach (var column in Model.Columns)
                {
                    <td>@row[column]</td>
                }
                <td>
                    <a href="@Url.Action("Edit", new { id = row[Model.PrimaryKeyColumn], tablename = Model.TableName })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = row[Model.PrimaryKeyColumn], tablename = Model.TableName })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
