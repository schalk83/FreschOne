@model List<PendingStepViewModel>
@{
    ViewData["Title"] = "Pending Steps";
    int userId = ViewBag.UserID;
}
<h2>Pending Steps for User @userId</h2>

<partial name="_Sidebar" />


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Process Number</th>
            <th>Step No</th>
            <th>Step Description</th>
            <th>Assigned To</th>
            <th>Date Assigned</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProcessInstanceID</td>
                <td>@item.StepNo</td>
                <td>@item.StepDescription</td>
                <td>
                    @if (item.UserID.HasValue)
                    {
                        <span>@item.FullName</span>
                    }
                    else if (item.GroupID.HasValue)
                    {
                        <span>@item.GroupDescription</span>
                    }
                </td>
                <td>@item.DateAssigned.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (item.UserID == null && item.GroupID != null)
                    {
                        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#confirmClaimModal_@item.EventID">
                            Claim Step
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="confirmClaimModal_@item.EventID" tabindex="-1" aria-labelledby="claimLabel_@item.EventID" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="claimLabel_@item.EventID">Confirm Step Claim</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to claim Step <strong>@item.StepNo</strong> of Process <strong>@item.ProcessInstanceID</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <form method="post"
                                              asp-action="ClaimStep"
                                              asp-controller="ProcessEvents"
                                              asp-route-userId="@userId"
                                              asp-route-stepId="@item.StepID"
                                              asp-route-processInstanceId="@item.ProcessInstanceID"
                                              asp-route-processId="@item.ProcessID">
                                            <input type="hidden" name="eventId" value="@item.EventID" />
                                            <input type="hidden" name="userId" value="@userId" />
                                            <button type="submit" class="btn btn-success">Yes, Claim</button>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-primary"
                           asp-action="PendingStep"
                           asp-route-userId="@userId"
                           asp-route-stepId="@item.StepID"
                           asp-route-processInstanceId="@item.ProcessInstanceID"
                           asp-route-processId="@item.ProcessID">
                            Go to Step
                        </a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
