@model FreschOne.Models.foUserReports
@{
    ViewData["Title"] = "Assign Report";
    var userid = ViewBag.userid;
    var l_user = ViewBag.l_user;
}

<partial name="_Sidebar" />

<h2>Assign Report</h2>

<form asp-action="Create" asp-route-userid="@userid" asp-route-l_user="@l_user" method="post">
    <input type="hidden" asp-for="UserID" />

    <div class="mb-3">
        <label asp-for="ReportID" class="form-label">Report</label>
        <select asp-for="ReportID" asp-items="ViewBag.Reports" class="form-select">
            <option value="">-- Select Report --</option>
        </select>
        <span asp-validation-for="ReportID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index", new { userid = userid, l_user = l_user })" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
