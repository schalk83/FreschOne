@model List<FreschOne.Models.foReportAccess>
@{
    ViewData["Title"] = "🗂️ Report Access Management";
    int userid = ViewBag.userid;
    long reportid = ViewBag.reportid;
    var users = ViewBag.Users as List<SelectListItem> ?? new();
    var groups = ViewBag.Groups as List<SelectListItem> ?? new();
}

<partial name="_Sidebar" />

<h2 class="mb-4">🗂️ Manage Report Access</h2>

@if (TempData["ReportAccessErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ReportAccessErrorMessage"]</div>
}
@if (TempData["ReportAccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["ReportAccessMessage"]</div>
}

<form asp-action="Create" method="post" id="accessForm">
    <input type="hidden" name="userid" value="@userid" />
    <input type="hidden" name="reportid" value="@reportid" />

    <div class="mb-3">
        <label class="form-label">Select User</label>
        @Html.DropDownList("accessUserID", users, "-- Select User --", new { @class = "form-select" })
    </div>

    <div class="mb-3">
        <label class="form-label">Select Group</label>
        @Html.DropDownList("groupID", groups, "-- Select Group --", new { @class = "form-select" })
    </div>

    <button type="submit" class="btn btn-green">Add Access</button>
</form>

<hr />

<table class="table table-bordered table-sm mt-4">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Group</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No access records found.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@(item.UserID.HasValue ? users.FirstOrDefault(u => u.Value == item.UserID.ToString())?.Text ?? "N/A" : "-")</td>
                    <td>@(item.GroupID.HasValue ? groups.FirstOrDefault(g => g.Value == item.GroupID.ToString())?.Text ?? "N/A" : "-")</td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.ID" />
                            <input type="hidden" name="userid" value="@userid" />
                            <input type="hidden" name="reportid" value="@reportid" />
                            <button type="submit" class="btn btn-sm btn-red">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("accessForm");
        if (!form) return;

        const userSelect = form.querySelector("select[name='accessUserID']");
        const groupSelect = form.querySelector("select[name='groupID']");

        form.addEventListener("submit", function (e) {
            const userSelected = userSelect.value;
            const groupSelected = groupSelect.value;

            if ((userSelected && groupSelected) || (!userSelected && !groupSelected)) {
                alert("Please select either a User or a Group, but not both.");
                e.preventDefault();
            }
        });

        function toggleOther(selectChanged, otherSelect) {
            if (selectChanged.value) {
                otherSelect.disabled = true;
            } else {
                otherSelect.disabled = false;
            }
        }

        userSelect.addEventListener("change", function () {
            toggleOther(this, groupSelect);
        });

        groupSelect.addEventListener("change", function () {
            toggleOther(this, userSelect);
        });

        toggleOther(userSelect, groupSelect);
        toggleOther(groupSelect, userSelect);
    });
</script>
